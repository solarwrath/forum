@model FORUM_PROJECT.ViewModels.CreateTopicViewModel

@{
    ViewData["Title"] = "Create Topic";
}

<div class="container d-flex flex-column justify-content-center full-height">
    <div class="form-wrapper d-flex flex-column justify-content-center">
        <h1 class="title">Create Topic</h1>
        <form asp-controller="Topic" asp-action="CreateTopic" method="post">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Title)"/>
                <span asp-validation-for="Title" class="text-danger" role="alert"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message"></label>
                <textarea asp-for="Message" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Message)" rows="8"></textarea>
            </div>
            <div class="btn-row">
                <button type="submit" class="btn btn-primary">Create Topic</button>
            </div>
        </form>
    </div>
</div>